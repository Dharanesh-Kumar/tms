@{
    Layout = null;
}
@model IEnumerable<UserTask>;

<!DOCTYPE html>
<html>

<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        header {
            background-color: #333;
            padding: 15px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header a {
            text-decoration: none;
            color: white;
            margin: 0 15px;
        }

        main {
            padding: 20px;
        }

        table {
            margin-top: 20px;
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #333;
            color: white;
        }
    </style>
</head>

<body>

    <header>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <h1 style="text-align: center;">Task Submitted</h1>
        <a asp-controller="UserTask" asp-action="Welcome">Back</a>
    </header>

    <main>
        <div class="container mt-4">
            <table>
                <thead>
                    <tr>
                        <th>ACE Id</th>
                        <th>Date</th>
                        <th>Project</th>
                        <th>Task</th>
                        <th>Workplace</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserTask task in Model)
                    {
                        <tr>
                            <td>@task.AceId</td>
                            <td>@task.Date</td>
                            <td>@task.Project</td>
                            <td>@task.Task</td>
                            <td>@task.WorkPlace</td>
                            <td>@task.Decription</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

</body>

</html>
