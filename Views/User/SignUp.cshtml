@model UserModel;
@{
    Layout = null; // To avoid using a layout page for simplicity
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: left;
        }

        header a {
            color: white;
            text-decoration: none;
            margin-right: 20px;
        }

        .signup-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .signup-container input {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
            border-radius: 4px;
        }

        .signup-container button {
            background-color: #333;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .signup-container .error-message {
            color: red;
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <header>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Home" asp-action="Privacy">About</a>
    </header>

    <div class="signup-container">
        <h2>Signup</h2>
        <form method="post">
            <input type="text" asp-for="AceId" placeholder="ACE ID" pattern="^ACE\d{4}$" title="ACE followed by four numbers" name="AceId" required>
            <input type="text" asp-for="Username" placeholder="Username" name="Username" required>
            <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Password" name="password"
                pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@@$!%*?&])[A-Za-z\d@@$!%*?&]{8,}"
                title="Password must have at least one small letter, one capital letter, one number, one special character (@@, $, !, %, *, ?, or &), and a minimum length of 15 characters."
                required>
            <input type="email" asp-for="Email" placeholder="Email" name="Email" required>
            <br>
            @* <p style="color:red">@ViewBag.Message</p> *@
            <button type="submit">Signup</button>
        </form>
    </div>
</body>

</html>
